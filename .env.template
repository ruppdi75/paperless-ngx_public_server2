# Paperless-ngx Environment Configuration Template
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control

# Database Configuration
POSTGRES_DB=paperless
POSTGRES_USER=paperless
POSTGRES_PASSWORD=YOUR_SECURE_DB_PASSWORD_HERE

# Paperless-ngx Configuration
PAPERLESS_REDIS=redis://redis:6379
PAPERLESS_DBHOST=db
PAPERLESS_DBNAME=paperless
PAPERLESS_DBUSER=paperless
PAPERLESS_DBPASS=YOUR_SECURE_DB_PASSWORD_HERE

# Email Configuration (Optional)
# PAPERLESS_EMAIL_HOST=smtp.gmail.com
# PAPERLESS_EMAIL_PORT=587
# PAPERLESS_EMAIL_HOST_USER=your-email@example.com
# PAPERLESS_EMAIL_HOST_PASSWORD=YOUR_EMAIL_APP_PASSWORD_HERE
# PAPERLESS_EMAIL_USE_TLS=true

# Email Consumption Configuration (Optional)
# PAPERLESS_EMAIL_TASK_CRON="*/10 * * * *"
# PAPERLESS_EMAIL_HOST=imap.gmail.com
# PAPERLESS_EMAIL_PORT=993
# PAPERLESS_EMAIL_HOST_USER=your-email@example.com
# PAPERLESS_EMAIL_HOST_PASSWORD=YOUR_EMAIL_APP_PASSWORD_HERE
# PAPERLESS_EMAIL_USE_SSL=true

# Security Settings
PAPERLESS_SECRET_KEY=YOUR_DJANGO_SECRET_KEY_HERE
PAPERLESS_ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com
PAPERLESS_CORS_ALLOWED_HOSTS=http://localhost:8000,https://your-domain.com

# Admin User (will be created during installation)
DJANGO_SUPERUSER_USERNAME=YOUR_ADMIN_USERNAME_HERE
DJANGO_SUPERUSER_PASSWORD=YOUR_SECURE_ADMIN_PASSWORD_HERE
DJANGO_SUPERUSER_EMAIL=admin@localhost

# Basic Configuration
PAPERLESS_URL=https://yourdomain.com
PAPERLESS_TIME_ZONE=Europe/Berlin
PAPERLESS_OCR_LANGUAGE=deu+eng

# Security
PAPERLESS_SECRET_KEY=change-me-to-a-random-string
PAPERLESS_ALLOWED_HOSTS=yourdomain.com,localhost

# Database
PAPERLESS_DBHOST=db
PAPERLESS_DBNAME=paperless
PAPERLESS_DBUSER=paperless
PAPERLESS_DBPASS=paperless

# Redis
PAPERLESS_REDIS=redis://broker:6379

# User Mapping
USERMAP_UID=1000
USERMAP_GID=1000

# Consumer Settings
PAPERLESS_CONSUMER_POLLING=30
PAPERLESS_CONSUMER_DELETE_DUPLICATES=true
PAPERLESS_CONSUMER_RECURSIVE=true

# OCR Settings
PAPERLESS_OCR_MODE=skip
PAPERLESS_OCR_SKIP_ARCHIVE_FILE=with_text
PAPERLESS_OCR_CLEAN=clean-final

# Optional: Email Configuration
# Use environment variables or .env file for sensitive data
#PAPERLESS_EMAIL_HOST=smtp.gmail.com
#PAPERLESS_EMAIL_PORT=587
#PAPERLESS_EMAIL_HOST_USER=your-email@gmail.com
#PAPERLESS_EMAIL_HOST_PASSWORD=${EMAIL_PASSWORD}
#PAPERLESS_EMAIL_USE_TLS=true
